<form bindsubmit="bindFormSubmit">
<view class='gx_ul'>
  <view class='gx_li'>
    <input placeholder-class="placeholder" value="{{luntangai.forum_title}}"  placeholder="标题 请输入标题品牌品类都是大家喜欢搜索的" type="text" style='width:100%' name="biaoti"/>
  </view>
  <view class='gx_li'>
    <text>价格</text>
    <input placeholder-class="placeholder" value="{{siliao}}"  placeholder="请输入价格" type="number" name="jiage"/>
    <view bindtap='siliao' name="siliao">私聊价格</view>
  </view>
  <view class='gx_li'>
    <text>分类</text>
    <input placeholder-class="placeholder"   value="{{luntangai.type_name}}" placeholder="请输入类型 如：服装" type="text" name="fenlei"/>
  </view>
  <view class='gx_li'>
    <text>品牌</text>
    <input placeholder-class="placeholder"  value="{{luntangai.brand_name}}" placeholder="请输入品牌" type="text" name="pinpai"/>
  </view>
  <view class='gx_li'>
    <text>交易地址</text>
    <input placeholder-class="placeholder" value="{{luntangai.forum_address}}"  placeholder="请输入期望交易地址" type="text" name="dizhi"/>
  </view>

  <textarea placeholder="请输入您想写的评论..." value="{{luntangai.forum_content}}" name="textarea"/>
  <view class='shi'>
    <image src='../../img/shizi.png' bindtap='up_img' name="up_img"/>
      <image wx:for="{{tempFilePaths}}" src='{{item}}' name="pic" wx:key="index" mode="aspectFill"/>

      <input hidden name="pic" value ="{{tempFilePaths}}"></input>
  </view>

  <button form-type="submit"> 发布编辑 </button>
  
</view>
</form>
