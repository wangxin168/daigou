/* pages/me/me.wxss */
.beijing{
  width: 100%;
  height: 306rpx;
  overflow: hidden;
  position: relative;
}
.shai_top{
  width: 100%;
  height: 150rpx;
  display: flex;
  /* align-items: center; */
  justify-content: space-between;
  text-align: center;
  margin-top: 40rpx;
  margin-left: 33rpx;
  position: relative;
}
.beijing_tu{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.shai_top .touxiang{
  width: 164rpx;
  height: 164rpx;
  display: block;
  border-radius:50%;
  margin-left: 31rpx;
}
.shai_top .up{
  width:45%;
  text-align:left;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.shai_top .up .nickname{
  font-size:44rpx; 
  color: #FFFFFF;
  width:100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.shai_top .qiandao{
  width:136rpx;
  height:62rpx;
  position: absolute;
  top: 120rpx;
  right: 33rpx;
}

.me_ul{
  width: 96%;
  margin-left: 4%;
}
.me_ul .me_li{
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 120rpx;
  font-size: 32rpx;
  align-items: center;
  border-bottom: 1rpx solid #D8D8D8;
}
.me_ul .me_li image{
  width: 40rpx;
  height: 40rpx;
}
.zhe{
  width: 100%;
  height: 100%;
  position: absolute;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
}
.zhe .wai{
  width: 675rpx;
  height: 491rpx;
  margin: 330rpx auto;
  background: white;
  padding: 1% 1.5% 1.5% 1%;
  box-sizing: border-box;
}
.zhe .wai .li{
  width: 100%;
  height: 100%;
  border: 1rpx solid #C0A369;
}
.zhe .wai .li .ul{
  width: 90%;
  margin: auto;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #d8d8d8;
}
.zhe .wai .li .ul .ul_wen{
  font-size: 36rpx;
  font-weight: bold;
}
.zhe .wai .li .di{
  width: 68%;
  margin: auto;
  text-align: center;
}
.zhe .wai .li .ul .ul_cha{
  color: #c0a369;
  font-size: 30rpx;
}