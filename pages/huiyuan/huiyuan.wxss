/* pages/huiyuan/huiyuan.wxss */
.hui{
  height: 100%;
  width: 100%;
  
}
.da{
  width: 100%;
  height: 100%;
}
.huiyuan{
  width: 100%;
    height: 365rpx;
    overflow: hidden;
    position: relative;
}
.beijing_tu{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.huiyuan view{
  width: 92%;
}
.huiyuan .shang{
  margin: 40rpx auto 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.huiyuan .shang text{
  display: block;
}
.huiyuan .shang text:nth-of-type(1){
  font-size: 60rpx;
  color: white;
}

.huiyuan .zhong{
  margin: auto; 
}
.huiyuan .zhong image{
  width: 150rpx;
  height: 56rpx;
}
.huiyuan .xia{
  color: #E4E4E4;
  font-size: 28rpx;
  margin: auto;
}

.guize{
  /* position: fixed; */
  top: 300rpx;
  width: 692rpx;
  height: 400rpx;
  border-radius: 20rpx;
  background: white;
  margin: -70rpx auto 0;
  z-index: 11;
}
.guize .shang{
  width: 94%;
  margin: auto;
  height: 80rpx;
  line-height: 60rpx;
  padding: 10rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #D8D8D8;
  z-index: 11;
}
.guize .jin{
  display: flex;
  align-items: center;
  width: 94%;
  margin: auto;
  font-size: 30rpx;
  color: #818181;
  height: 80rpx;
  line-height: 80rpx;
}
.guize .jin>view{
  width: 101rpx;
  height: 32rpx;
  background: #EBEBEB;
border-radius: 16px;
margin-right: 20rpx;
text-align: center;
line-height: 27rpx;
}
.guize .jin>image{
  width: 100rpx;
  height: 35rpx;
  line-height: 80rpx;
  display: block;
  margin-right: 20rpx;
}

.chong{
  width: 682rpx;
  height: 90rpx;
  background: #242424;
  color: white;
  text-align: center;
  line-height: 90rpx;
  margin: 100rpx auto;
  border-radius: 5px;
}
.dise{
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  position: fixed;
  top: 365rpx;
  left: 0;
  z-index: -1;
}