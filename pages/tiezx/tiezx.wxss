.shai{
  width: 92%;
  margin: auto;
  border-bottom: 1px solid #E9E9E9;
}
.shai .shai_top{
  width: 100%;
  height: 100rpx;
  display: flex;
  /* align-items: center; */
  justify-content: space-between;
  text-align: center;
}
.shai .shai_top .touxiang{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.jieshao{
  width: 92%;
  margin: auto;

}
.jieshao text{
  display: block;
  /* margin-top: 15rpx; */
  margin-bottom: 15rpx;
  font-size: 30rpx;
  color: #AAAAAA;
}
.jieshao view{
  display: flex;
  align-items: center;
  color: #C0A369;
  margin-top: 15rpx;
}

.jieshao view:nth-of-type(1){
  font-size: 24rpx;
}
.jieshao view:nth-of-type(2){
  font-size: 40rpx;
}
.jieshao text:nth-of-type(1){
  margin-top: 26rpx;
  font-size: 32rpx;
  color: #525252;
  font-weight: bold;
}

.xian{
  width: 100%;
  height: 22rpx;
  background: #F5F5F5;
}
.youhui{
  width: 92%;
  margin: 40rpx auto 0;
}
.youhui view image{
  width: 150rpx;
  height: 46rpx;
}
.youhui text{
  font-size: 26rpx;
  color: #9F9F9F;
  margin-top: 16rpxï¼›
}

.tu{
  width: 92%;
  margin: 0 auto 100rpx auto;
}
.tu image{
  width: 685rpx;
  /* height: 100%; */
}

.ping{
  width: 94%;
  margin-left: 6%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 26rpx;
}
.ping .ping_le{
  width: 15%;
  text-align: center;
}
.ping .ping_le image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-top: 20rpx;
}
.ping .ping_ri{
  width: 85%;
  border-bottom: 1px solid #E9E9E9;
}
.ping .ping_ri .nick{
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  align-items: center;
}
.ping .ping_ri .wen{
  margin-top: 6rpx;
  font-size: 30rpx;
}
.ping .ping_ri .time{
  font-size: 24rpx;
  color: #9F9F9F ;
  margin-top: 11rpx;
  margin-bottom: 11rpx;
}
.ping .ping_ri .tu{
  width: 100%;
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
  box-sizing: border-box;
  margin: 20rpx auto;
}
.ping .ping_ri .tu image{
  width: 186rpx;
  height: 186rpx;
  margin-left: 9rpx;
  margin-top: 10rpx
}

.di{
  width: 100%;
  height: 90rpx;
  background: #F9F9F9;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
}
.di .shouc{
  width: 33.3%;
  text-align: center;
  border-right: 1px solid #D8D8D8;
}
.di view image{
  width: 120rpx;
  height: 33rpx;
}
button{
  padding: 0;
  background: F9F9F9;
  height: 54rpx;
  line-height: 54rpx;
}
button::after{
  border:none;
}