/* pages/jifen/jifen.wxss */

.jifen{
  width: 100%;
    height: 339rpx;
    overflow: hidden;
    position: relative;
}
.beijing_tu{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.jifen .ji{
  font-size: 80rpx;
  width: 100%;
  text-align: center;
  display: block;
  margin-top: 60rpx;
  color: #C0A369;
}

.mei{
  width: 100%;
  background: #F5F5F5;
}
.mei .mingx{
  width: 35%;
  height: 66rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: auto;
}
.mei text{
  font-size: 24rpx;
  color: #CECECE;
  letter-spacing: 1.48px;
  display: block;
  margin: 0 15rpx;
  
}
.mei .mingx view{
  width: 58rpx;
  height: 2rpx;
  background: #CECECE;
}

.qian{
  width: 96%;
  margin-left: 4%;
  height: 138rpx;
  padding: 20rpx 20rpx 20rpx 0;
  border-bottom: 1px solid #ECECEC;
  box-sizing: border-box;
}
.qian .shang{
  display: flex;
  justify-content: space-between;
}
.qian .shang text:nth-of-type(1){
  font-size: 30rpx;
}
.qian .shang text:nth-of-type(2){
  font-size: 32rpx;
  color: #A1A1A1;
  letter-spacing: 0.57px;
}
.qian .xia{
  font-size: 26rpx;
  color: #A1A1A1;
  margin-top: 15rpx;
}
.chongzhi{
  width: 100%;
  margin-top: 100rpx;
  text-align: center;
  font-size: 36rpx;
}
.chongzhi view{
  margin-top: 30rpx;
}